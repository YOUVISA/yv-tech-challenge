{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "xo",
    "plugin:react/recommended",
    "next",
    "plugin:react-hooks/recommended"
  ],
  "overrides": [
    {
      "extends": ["xo-typescript"],
      "files": ["*.ts", "*.tsx"]
    }
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "@typescript-eslint/naming-convention": "off"
  }
}
